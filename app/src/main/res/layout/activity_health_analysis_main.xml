<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HealthAnalysisMainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Health Stats"
            android:gravity="top"
            android:textAlignment="center"
            android:background="#FF3E3F"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:fontFamily="@font/loveyalikeasis"/>

        <LinearLayout
            android:id="@+id/barChart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="70dp">

            <com.github.mikephil.charting.charts.BarChart
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:id="@+id/bargraph"></com.github.mikephil.charting.charts.BarChart>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="40dp">

            <TextView
                android:id="@+id/bmi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/loveyalikeasis"
                android:textColor="#FF3E3F"/>
            <TextView
                android:id="@+id/activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/loveyalikeasis"
                android:textColor="#FF3E3F"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/logFood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log food"/>

            <Button
                android:id="@+id/logExcercise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log excercise"/>

        </LinearLayout>

            <Button
                android:id="@+id/healthAnalysis"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Health Analysis"/>

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="149dp"
        android:layout_marginLeft="149dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/logo" />

    </LinearLayout>


</RelativeLayout>